{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "lib": ["ES2015", "DOM"],
    "typeRoots": ["./node_modules/@types", "./types"]
  },
  "include": ["src/**/*", "../database/scripts/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}